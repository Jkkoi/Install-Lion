<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:defaultValue="false"
        android:key="hide_icon"
        android:summary="@string/hide_tip"
        android:title="@string/hide_title" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="show_notification"
        android:summary="@string/show_tip"
        android:title="@string/show_title" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="needconfirm"
        android:summary="@string/confirm_tip"
        android:title="@string/confirm_title" />
    <PreferenceCategory android:title="@string/name_install1">
        <SwitchPreference
            android:defaultValue="true"
            android:key="enable1"
            android:summaryOff="@string/summaryOff"
            android:summaryOn="@string/summaryOn"
            android:title="@string/enable_title" />
        <Preference
            android:key="icebox_supported"
            android:title="冰箱支持状态" />
        <Preference
            android:key="icebox_permission"
            android:title="冰箱权限状态" />
        <Preference
            android:key="avInstall1"
            android:title="@string/request" />
    </PreferenceCategory>
</PreferenceScreen>